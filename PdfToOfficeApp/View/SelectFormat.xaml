<UserControl x:Class="PdfToOfficeApp.SelectFormat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="90"
             d:DesignWidth="800">
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Themes/Generic.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>
  <Grid>
    <StackPanel>
      <Grid Height="90">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="80" />
          <ColumnDefinition Width="80" />
          <ColumnDefinition Width="80" />
          <ColumnDefinition Width="80" />
          <ColumnDefinition Width="80" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <RadioButton x:Name="IDC_RadioButton_HWP"
                     Checked="RadioButton_Checked"
                     HorizontalAlignment="Center"
                     Grid.Column="1"
                     IsChecked="True">
          <Image Height="{StaticResource sz-btn-Format}">
            <Image.Source>
              <DrawingImage Drawing="{DynamicResource lg_pdftohwpdlg}" />
            </Image.Source>
          </Image>
        </RadioButton>
        <RadioButton x:Name="IDC_RadioButton_XLSX"
                     Checked="RadioButton_Checked"
                     HorizontalAlignment="Center"
                     Grid.Column="2">
          <Image Height="{StaticResource sz-btn-Format}">
            <Image.Source>
              <DrawingImage Drawing="{DynamicResource lg_pdftoxlsxdlg}" />
            </Image.Source>
          </Image>
        </RadioButton>
        <RadioButton x:Name="IDC_RadioButton_PPTX"
                     Checked="RadioButton_Checked"
                     HorizontalAlignment="Center"
                     Grid.Column="3">
          <Image VerticalAlignment="Top"
                 Height="{StaticResource sz-btn-Format}">
            <Image.Source>
              <DrawingImage Drawing="{DynamicResource lg_pdftopptxdlg}" />
            </Image.Source>
          </Image>
        </RadioButton>
        <RadioButton x:Name="IDC_RadioButton_DOCX"
                     Checked="RadioButton_Checked"
                     HorizontalAlignment="Center"
                     Grid.Column="4">
          <Image VerticalAlignment="Top"
                 Height="{StaticResource sz-btn-Format}">
            <Image.Source>
              <DrawingImage Drawing="{DynamicResource lg_pdftodocxdlg}" />
            </Image.Source>
          </Image>
        </RadioButton>
        <RadioButton x:Name="IDC_RadioButton_Image"
                     Checked="RadioButton_Checked"
                     HorizontalAlignment="Center"
                     Grid.Column="5">
          <Image Grid.Column="5"
                 VerticalAlignment="Top"
                 Height="{StaticResource sz-btn-Format}">
            <Image.Source>
              <DrawingImage Drawing="{DynamicResource lg_pdftoimagedlg}" />
            </Image.Source>
          </Image>
        </RadioButton>
        <StackPanel Grid.Column="6">
          <Expander FocusVisualStyle="{x:Null}"
                    Height="90">
            <StackPanel>
              <RadioButton Content="JPG" />
              <RadioButton Content="PNG" />
              <RadioButton Content="BMP" />
              <RadioButton Content="GIF" />
            </StackPanel>
          </Expander>
        </StackPanel>
      </Grid>
    </StackPanel>
  </Grid>
</UserControl>
